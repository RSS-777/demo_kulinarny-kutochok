{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  }
}
